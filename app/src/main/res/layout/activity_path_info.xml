<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dijingyu.app_demo.ui.show.activity.PathInfoActivity">
    <ScrollView
        android:layout_above="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:background="@color/c_eaeaea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_city"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_13" />
            <TextView
                android:id="@+id/tv_now"
                android:textColor="@color/c_373737"
                android:textSize="@dimen/sp_26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_13" />
            <TextView
                android:id="@+id/tv_title"
                android:textColor="@color/c_636363"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_66"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_13" />
            <ImageView
                android:id="@+id/iv_close"
                android:src="@mipmap/close"
                android:layout_marginTop="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_330"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_330"
                tools:ignore="ContentDescription" />
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_marginTop="@dimen/dp_104"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_279" />
            <ImageView
                android:id="@+id/iv_tou"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_404"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_21" />

            <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/c_373737"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_410"
                android:layout_marginLeft="@dimen/dp_93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_93" />

            <TextView
                android:id="@+id/tv_jop"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_434"
                android:layout_marginLeft="@dimen/dp_93"
                android:textColor="@color/c_636363"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_93" />

            <TextView
                android:id="@+id/tv_city_now"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/c_999999"
                android:layout_marginLeft="@dimen/dp_331"
                android:layout_marginTop="@dimen/dp_424"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_331" />

            <TextView
                android:id="@+id/tv_text"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_472"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_334"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_below="@id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_all"
                android:text="@string/all"
                android:layout_below="@id/rlv"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999999"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        
            <Button
                android:id="@+id/bt_share"
                android:text="@string/share"
                android:layout_marginTop="@dimen/dp_28"
                android:background="@drawable/bg_bt_circle"
                android:layout_below="@id/tv_all"
                android:layout_marginLeft="@dimen/dp_71"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_28"
                android:layout_marginStart="@dimen/dp_71">
            </Button>
            
            <Button
                android:id="@+id/bt_collect"
                android:layout_marginTop="@dimen/dp_28"
                android:text="@string/collect"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/bg_bt_circle"
                android:layout_below="@id/tv_all"
                android:layout_marginLeft="@dimen/dp_218"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_28"
                android:layout_marginStart="@dimen/dp_218">
            </Button>
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_60">
        <Button
            android:id="@+id/bt_path"
            android:background="@drawable/bg_bt_kuang"
            android:layout_marginLeft="@dimen/dp_51"
            android:textSize="@dimen/sp_15"
            android:text="@string/path"
            android:textColor="@color/c_fa6a13"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_38"
            android:layout_marginStart="@dimen/dp_51" />
        <Button
            android:id="@+id/bt_buy"
            android:background="@drawable/bg_bt_jian"
            android:layout_marginLeft="@dimen/dp_50"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_width="@dimen/dp_112"
            android:layout_height="@dimen/dp_38"
            android:layout_marginStart="@dimen/dp_50" />
    </LinearLayout>
</RelativeLayout>
