<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dijingyu.app_demo.ui.personage.activity.AlterActivity">

    <android.support.v7.widget.CardView
        app:cardElevation="@dimen/dp_10"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/back_white"
                android:id="@+id/iv_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_20" />

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:id="@+id/tv_success"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_fa6a13"
                android:text="@string/success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    
    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_84"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_130">
        <RelativeLayout
            android:background="@color/c_f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/ed_up"
                android:layout_margin="@dimen/dp_14"
                android:maxLength="27"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_num"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_93"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_12" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    
</RelativeLayout>
