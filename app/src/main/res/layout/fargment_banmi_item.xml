<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v7.widget.CardView
        app:cardElevation="-10dp"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_120"
        android:layout_marginStart="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessLeaf">
            <ImageView
                android:id="@+id/iv"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_137"
                android:layout_width="@dimen/dp_150"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_22"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_137" />
            <TextView
                android:id="@+id/tv_fensi"
                android:layout_marginLeft="@dimen/dp_137"
                android:layout_marginTop="@dimen/dp_42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_137" />
            <TextView
                android:id="@+id/tv_city"
                android:layout_marginLeft="@dimen/dp_156"
                android:layout_marginTop="@dimen/dp_69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_156" />
            <TextView
                android:id="@+id/tv_now"
                android:layout_marginLeft="@dimen/dp_156"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_156" />
            <ImageView
                android:src="@mipmap/location"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_139"
                android:layout_marginTop="@dimen/dp_71"
                android:layout_marginStart="@dimen/dp_139" />
            <ImageView
                android:src="@mipmap/share"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_139"
                android:layout_marginTop="@dimen/dp_92"
                android:layout_marginStart="@dimen/dp_139" />
            <ImageView
                android:id="@+id/iv_collect"
                android:src="@mipmap/follow_unselected"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_305"
                android:layout_marginStart="@dimen/dp_305" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    
</RelativeLayout>