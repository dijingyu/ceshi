<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.CardView
            app:cardElevation="-10dp"
            app:cardCornerRadius="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_413"
            android:layout_marginStart="@dimen/dp_15">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessLeaf">
                <ImageView
                    android:id="@+id/iv"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription" />
                <View
                    android:layout_width="@dimen/dp_335"
                    android:layout_height="@dimen/dp_116"
                    android:background="#A6FFFFFF"
                    />
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15" />
                <TextView
                    android:id="@+id/tv_title"
                    android:textColor="#373737"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_32"
                    android:textSize="@dimen/sp_26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15" />
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:id="@+id/tv_city_info"
                    android:textColor="#636363"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_69"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15" />
                <Button
                    android:background="@drawable/bg_login_button_on"
                    android:id="@+id/bt_buy"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_246"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_29"
                    android:layout_marginStart="@dimen/dp_246" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>